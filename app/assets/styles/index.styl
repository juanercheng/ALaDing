@import './common/normalize'
@import './common/common'
@import './common/header'
@import './common/footer'
@import './utils/fun'

.banner
  width 100%
  height 356px
  position relative
  overflow hidden

.banner .items
  position absolute
  width 20000rem
  height 100%

.items a
  display block
  height 100%
  float left

.items a img
  height 356px
  width 1300px

.banner .navi
  position absolute
  bottom 0
  right 15px

.navi a
  display: inline-block
  width: 10px
  height: 10px
  background-color: #FCF9F9
  z-index: 2
  margin: 5px
  F_borderRadius(100%)

.navi a.active
  background-color $LogoBg

.news
  width 346px

.activity
  width 910px

.cars
  margin 0 20px
  height 705px
  overflow hidden

.c_bottom >div
  width 420px
  margin-bottom 52px

.c_center
  max-height 330px
  margin 15px 0

.article .article_content a,
.news .article_content a
  F_ellipsis(inherit)
  line-height 22px
  &:hover
    text-decoration underline

.activity .article_content li
  width 206px
  height 132px
  float left
  margin 0 0 10px 25px

.activity .article_content li:nth-child(4n-3)
  margin-left 0

.c_bottom .article .article_content
  padding 0

.c_bottom .article ul li
  border-bottom 1px solid #d3d3d3
  padding 8px 3px
  line-height 20px
  min-height 65px

.article.fl.goods
  height 705px
  overflow: hidden
.article.fl.company
  height: 705px;
  overflow: hidden


.tenders{
  margin: 0 20px;
}

.tenders,.recruit,.usedcar{
  height: 705px;
  overflow: hidden;
}

.c_bottom .article ul li div{
  white-space:nowrap;
  -o-text-overflow: ellipsis;
  text-overflow: ellipsis;
  overflow: hidden;
}