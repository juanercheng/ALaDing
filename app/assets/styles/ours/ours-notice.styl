@import '../common/header'
@import '../common/footer'
@import '../common/my-common'

.notic-list
  margin 0 auto
  color #282828
  font-size 16px
  width 600px

.notic-list #data-list
  margin-top 60px
  padding 0 20px

.notic-list #data-list li
  position relative
  padding 5px
  padding-left 15px
  & a
    F_ellipsis(375px)
  & a:hover
    text-decoration underline

.notic-list #data-list li::before
  width 7px
  F_center_v(7px)
  F_borderRadius(100%)
  background $LogoBg
  content ''
  left 0
.notic-list .pager
  @extends .t-c

.notic-detail
  padding 30px
  color #333333
  text-indent: 30px;
  line-height: 30px;
  font-size: 15px;

.notic-detail .detail_title
  font-size 20px
.detail_time
  padding 1.6%
  & span
    font-size 12px
    color #818181
    margin-right 25px

.detail_text
  line-height: 30px
  color: #4b4b4b
  text-indent: 2em