@import './val'
@import './common'

.logo
  display:table
  text-align:center
  font-size 17px

.header .logo
  margin-top 16.5px
  float left

.logo:after
  width: 67px;
  height: 67px;
  background:url("/assets/image/logo.png") center no-repeat;
  background-size:100% 100%;

  content:'';
  display: table-cell;
  vertical-align: middle;
  color $GlobalBg;

.header >div
  width:$MaxContainerWidth
  max-width:@width
  margin:auto
  background-color $HeaderAndFooterBg
  position: relative

.container
  min-height 600px

.header ul.nav,
.header ul.nav >li
  float left
  font-size 16px
  margin: 0 10px;

.header ul.nav >li
  width 65px
  text-align center
  padding 42px 5px
  cursor pointer
  &:hover
    background-color $LogoBg
  &.active
    background-color $LogoBg

.header .header_right
  position absolute
  right 0

.header .search_form
  float left
  font-size 14px
  color #000000
  padding: 5px 0
  margin-right: 25px
  & .type
    margin 5px
    & span
      display inline-block
      padding 3px
      cursor pointer
      color #ffffff
      &.active
        color $LogoBg

.search_form form
  background-color $GlobalBg
  F_borderRadius(15px)
  width: 252px;
  position relative

.search_form input[type="submit"]
  position: absolute;
  right: 0
  top: 0
  width: 42px
  height: 100%
  border none
  outline none
  background url("/assets/image/icons.png") 10px -37px no-repeat

.search_form input[type="text"]
  padding: 8px 42px 8px 10px
  background: transparent
  border: none
  outline: none
  width: 200px

.header_right .btn_group,
.btn_group li
  float left
  font-size 14px

.btn_group li
  padding 42px 0
  F_ellipsis()

.btn_group li.line
  padding-left 10px
  padding-right 10px

.header .no_nav
  padding 40px 0
  font-size 22px
  padding-left 15px
  display inline-block







