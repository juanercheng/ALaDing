@import './common/normalize'
@import './common/common'
@import './common/header'
@import './common/footer'
@import './common/reg-common'
@import './utils/fun'

.yzm .input_group
  width 218px
  display inline-block
  margin 0
.yzm .msg-box
  top 3px
  right -153px

.yzm button
  width: 125px
  height: 45px
  background: #949393
  border: 1px solid #bab9b9
  color: #282828
  F_borderRadius(5px)
  &.disable
    cursor not-allowed

.reg_form .reg_btn
  margin-top 30px

.reg_over
  color #000000
  padding 150px 0 330px 0

.reg_over a
  color #e94249

.select
  position relative
  & select
    border: none;
    -webkit-appearance: none;
    -moz-appearance: -moz-mac-vibrancy-dark;
    outline: none;
    background: transparent;
    width: 100%;
    padding: 6px
  &:after
    content ''
    F_center_v(20px)
    right: 0
    background: url("/assets/image/icons.png") no-repeat;
    width: 20px;
    background-position:0px -22px;