@import '../common/my-common'
@import '../common/header'
@import '../common/footer'
@import '../reg-step2'

.reg_form
  display inline-block

form .input>label, .select {
  width: 147px;
}
.select {
  width: 105px;
}

.textarea{
	width:340px;
	padding:10px;
	border: 1px solid #e3e3e3;
	color: #000;
	height:100px;
}
.readWarning{
	color:red;
}
form .file .file_upload {
  overflow: visible;
}

.reg_form .fail_btn {
  width: 115px;
  display: inline-block;
  margin-left: 60px;
}

.dialog{
  position: fixed;
  width: 500px;
  height: 300px;
  top: 50%;
  left: 50%;
  background-color: #fff;
  margin-left: -250px;
  margin-top: -150px;
  z-index: 9999;
  border: 1px solid #ccc;
  color:#333;
  display:none;
}
.dialog h1{
  border-bottom: 1px solid #ccc;
  padding-left: 30px;
}
.dialog textarea{
  width: 90%;
  height: 150px;
  margin-left: 5%;
}
.dialog .pink_btn{
  width: 100px;
  display: inline-block;
  margin-left: 30px;
}
.dialog .pink_btn.dfail_btn{
  width: 100px;
  display: inline-block;
  margin-left: 57px;
  margin-right: 88px;
}
.dialogbg{
  display:none;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9998;
  background-color: black;
  top: 0;
  left: 0;
  opacity: 0.7;
}