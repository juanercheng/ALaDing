.order_list .o_data .operate >button
  display inline-block
  width 80px
  margin-right 15px



.dialog{
  position: fixed;
  width: 300px;
  height:250px;
  top: 50%;
  left: 50%;
  background-color: #fff;
  margin-left: -150px;
  margin-top: -125px;
  z-index: 9999;
  border: 1px solid #ccc;
  color:#333;
  display:none;
}
.dialog h1{
  border-bottom: 1px solid #ccc;
  padding-left: 30px;
  font-size: 18px;
}
.dialog textarea{
  width: 90%;
  height: 150px;
  margin-left: 5%;
}
.dialog .pink_btn{
  width: 100px;
  display: inline-block;
  margin-left: 30px;
}
.dialogbg{
  display:none;
  width: 100%;
  height: 100%;
  position: fixed;
  z-index: 9998;
  background-color: black;
  top: 0;
  left: 0;
  opacity: 0.7;
}
.dialog .money{
  border: none;
  margin-bottom: 10px;
  border-bottom: 1px solid #ccc;
  width: 109px;
  padding: 10px 5px;
}
.dialog .password{
  padding-left: 30px;
  margin-bottom: 30px;
  font-size: 16px;
	
}
.dialog .password input{
  margin-top: 16px;
  padding: 10px 5px;
}