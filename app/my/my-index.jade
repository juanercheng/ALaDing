                                .file_upload
                                    img.userPhotoImg
                                    input(type="file")
                                    input(type="hidden",name="userPhotoImg")

                            .input.file
                                label 身份证号&nbsp;&nbsp;: &nbsp;
                                .file_upload
                                    img.identityCardImg
                                    input(type="file")
                                    input(type="hidden",name="identityCardImg" ,data-rule="",value="")

                            .input.file
                                label 驾驶证号&nbsp;&nbsp;: &nbsp;
                                .file_upload
                                    img.drvLicenseImg
