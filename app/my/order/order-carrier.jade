                .content
                    .carrier
                        form#carrier_form
                            div.input
                                label 真实姓名*：
                                input(type="text",name="drvReallyName",data-rule="required;length[1~20]")
                            div.input
                                label 手机号*：
                                input(type="text",name="drvCellPhone",data-rule="required;mobile;")
                            div.input
                                label 身份证号*：
                                input(type="text",name="drvIdentityCardNo",data-rule="required;ID_card;")
                            div.input
                                label 车牌号*：
                                input(type="text",name="drvVehicleLicenceNo",data-rule="required;length[1~20]")
                            div.input.file
                                label 身份证照片*：
                                .file_upload
                                    img
                                    input(type="file")
                                    input(type="hidden",name="drvIdentityCardImg",data-rule="required;",value="")
                                span(class="msg-box",for="drvIdentityCardImg")
                            div.input.file
                                label 行驶证照片：
                                .file_upload
                                    img
                                    input(type="file")
                                    input(type="hidden",name="drvTLicenseImg")
                            div.input.file
                                label 驾驶证照片*：
                                .file_upload
                                    img
                                    input(type="file")
                                    input(type="hidden",name="drvLicenseImg")

                            .t-c
                                input(type="submit",class="pink_btn save_btn",value="保存")
